<?xml version="1.0"?> 
<project basedir="." default="compile"> 
    <taskdef name="jscomp" classname="com.google.javascript.jscomp.ant.CompileTask" 
             classpath="lib/closure-compiler-20100201.jar"/> 
    <target name="compile"> 
        <mkdir dir="output"/>
        <jscomp compilationLevel="simple" warning="verbose" debug="false" output="output/avro-min.js"> 
            <sources dir="${basedir}/src"> 
                <file name="avro.js"/> 
            </sources> 
        </jscomp> 
    </target> 
</project> 
